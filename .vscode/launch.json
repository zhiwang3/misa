{
  // 使用 IntelliSense 了解相关属性。 
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Debug", //名称
      "type": "cppdbg", //调试类型，除使用msvc进行调试外，均为该类型
      "request": "launch",
      // "program": "${workspaceFolder}/build/example/example_hirt/example_op_conv1s1_conv3s1_conv3s1", //指定C/C++程序位置
      // "program": "${workspaceFolder}/build/example/example_hirt/example_hirt_conv", //指定C/C++程序位置
      "program": "${workspaceFolder}/build/bin/llc",
    // "program": "${workspaceFolder}/build/bin/clang",
      "args": ["-march=riscv32","${workspaceFolder}/conv33_s1.ll","-o","test.s","--debug=1"], //指定运行参数
      // "args": ["${workspaceFolder}/intrinsic_test.cpp","-emit-llvm","-S","-o","intrinsic_test.ll","--target=riscv32"], //指定运行参数
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}", //指定工作目录
      // "preLaunchTask": "build", //在调试前会先调用build_debug这个task编译构建程序
      "environment": [],
      "externalConsole": false,
      "osx": { //macOS的特定配置
          // "miDebuggerPath": "/Applications/Xcode.app/Contents/ Developer/usr/bin/lldb-mi", //修改使用的lldb-mi，一般不需要修改
          "MIMode": "lldb" //指定使用lldb进行调试
      },
      "linux": { //linux的特定配置
          "MIMode": "lldb", //指定使用gdb调试
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ]
      },
      "windows": { //windows的特定配置
          "type": "cppvsdbg", //指定使用msvc进行调试
          "program": "${workspaceFolder}/build/${workspaceFolderBasename}.exe", //指定C/C++程序位置
      }
  }
  ]
}